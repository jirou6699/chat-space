.Side-bar
  .Side-bar__user-name
    .TopItems
      .TopItems__name
        =current_user.name
      .TopItems__icons
        =link_to new_group_path do
          = icon('far', 'edit', class:"TopItems__icons--edit")
          %span<>
        =link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class:"TopItems__icons--cog")
  
  .Side_bar__group-list
  - current_user.groups.each do |group|
    .SideChat
      = link_to group_messages_path(group) do
        .SideChat__name
          =group.name
        .SideChat__message
          =group.show_last_message